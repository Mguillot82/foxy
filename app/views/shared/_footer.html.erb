<%# FOOTER %>
<div class="footer-container">
  <div class="row footer-row">

  <%# Friends %>
    <div class="col footer-col">
      <% if current_page?(friends_path) %>
        <%= link_to friends_path do %>
          <i class="fa-solid fa-user-group icon icon-footer active"></i>
        <% end %>
      <% else %>
        <%= link_to friends_path do %>
          <i class="fa-solid fa-user-group icon icon-footer"></i>
        <% end %>
      <% end %>
    </div>
  <%# /Friends %>

  <%# Collections %>
    <div class="col footer-col">
      <% if user_signed_in? %>
        <% if current_page?(user_collections_path(current_user)) %>
          <%= link_to user_collections_path(current_user) do %>
            <i class="fa-solid fa-layer-group icon icon-footer active"></i>
          <% end %>
        <% else %>
          <%= link_to user_collections_path(current_user) do %>
            <i class="fa-solid fa-layer-group icon icon-footer"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>

  <%# Home %>
    <div class="col footer-col">
      <% if current_page?(root_path) %>
        <%= link_to root_path do %>
          <i class="fa-solid fa-camera icon icon-footer active"></i>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <i class="fa-solid fa-camera icon icon-footer"></i>
        <% end %>
      <% end %>
    </div>
  <%# /Home %>

  <%# Search %>
    <div class="col footer-col">
      <% if current_page?(animals_path) %>
        <%= link_to animals_path do %>
          <i class="fa-solid fa-magnifying-glass icon icon-footer active"></i>
        <% end %>
      <% else %>
        <%= link_to animals_path do %>
          <i class="fa-solid fa-magnifying-glass icon icon-footer"></i>
        <% end %>
      <% end %>
    </div>
  <%# /Search %>

  <%# Settings %>
    <div class="col footer-col">
      <% if current_page?(settings_path) %>
        <%= link_to settings_path do %>
          <i class="fa-solid fa-gear icon icon-footer active"></i>
        <% end %>
      <% else %>
        <%= link_to settings_path do %>
          <i class="fa-solid fa-gear icon icon-footer"></i>
        <% end %>
      <% end %>
    </div>
  <%# /Settings %>

  </div>
</div>

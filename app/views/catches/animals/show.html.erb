  </div>
  <div class="container-body">
    <div class="back_button">
      <%= link_to url_for(:back) do %>
        <div class="btn btn-outline-secondary btn-back">â†©</div>
      <% end %>
    </div>
    <div  data-catches-animals-target='animal'>

<div class='settings-container'>
  <div class='settings-banner'>
    <div class='settings-banner-title'>
      <div class='settings-icon-light'><i class="fa-solid fa-gear"></i></div>
      <div class='settings-title-light'>Settings</div>
    </div>
  </div>
  <div class='settings-card'>
    <div class='settings-card-header'>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: 'img-friend', alt: 'profil picture'  %>
      <% else %>
        <img class='settings-user-img'  src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fimages.fineartamerica.com%2Fimages%2Fartworkimages%2Fmediumlarge%2F1%2Fa-red-panda-profile-christopher-miles-carter.jpg&f=1&nofb=1&ipt=f6620bb105608b37ea4fb0d8cf67f7f847969e478745fb7397373810f39c1e96&ipo=images" alt="">
      <% end %>
      <div class='settings-username'><%= current_user.username %></div>
      <div class='settings-anchor'>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
      </div>
    </div>
    <hr class='settings-hr'>
    <div class='setting-element settings-subtitle'>account settings</div>
    <div class='settings-element'>
      <div class='settings-element-title'>Edit profile</div>
      <div class='settings-icons'>
        <%= link_to edit_user_registration_path(current_user) do %>
          <i class="fa-solid fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>Change Password</div>
      <div class='settings-icons'>
        <%= link_to edit_user_password_path(current_user) do %>
          <i class="fa-solid fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>Manage Friends</div>
      <div class='settings-icons'>
      <%= link_to friends_path(current_user) do %>
        <i class="fa-solid fa-plus"></i>
        <% end %>
      </div>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>Push notifications</div>
        <label class="switch">
	        <input type="checkbox" />
	        <span></span>
        </label>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>Dark mode</div>
        <label class="switch">
	        <input type="checkbox" />
	        <span></span>
        </label>
    </div>
    <hr class='settings-hr'>
    <div class='settings-element settings-subtitle'>
      <div class='settings-element-title'>More</div>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>About Us</div>
      <div class='settings-icons'>
        <%= link_to root_path(current_user) do %>
          <i class="fa-solid fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
    <div class='settings-element'>
      <div class='settings-element-title'>Privacy policy</div>
      <div class='settings-icons'>
        <%= link_to root_path(current_user) do %>
          <i class="fa-solid fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
  </div>

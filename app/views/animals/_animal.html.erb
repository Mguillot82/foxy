<div class="card-animal-catch-content">
  <div class="card-animal-name">
    <div class="card-animal-title"><%= @animal.name%></div>
  </div>
  <div class="card-animal-taxons">
    <div class="card-animal-title-secondary"><%= @animal.scientific_name%></div>
    <div class="card-animal-title-taxonomy"><%= @animal.taxonomy.name%></div>
  </div>
  <div class="card-animal-description"><%= @animal.description%></div>
  <div class="card-animal-locations">
    <div class="card-animal-title-secondary">Geographic location</div>
    <img src= <%= @animal.location %> alt="" class="card-animal-location">
  </div>
</div>

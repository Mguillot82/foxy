 <!-- SEARCH_BAR -->
    <div class="col-4">
      <%= form_with url: animals_path, method: :get do %>
        <div class="search-form-control form-group">
          <div id="form" class="search-form-control form-group">
            <%= text_field_tag :query, params[:query], class: "form-control string required" %>
              <%= button_tag type: 'submit', class: "btn text-white btn-flat" do %>
                <i class="fas fa-search"></i>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
<!-- /SEARCH_BAR -->

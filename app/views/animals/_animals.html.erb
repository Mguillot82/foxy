<div class="animal-cards-list">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal.id) do %>
        <div class="animal-card">
          <div class="animal-card-image" style="background-image: url(<%= animal.photo_url.nil? ? 'https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Forg-www.argusdelassurance.com%2Fimages%2Fplaceholder.jpg&f=1&nofb=1&ipt=9e2c51c472950c80fe78c17222a500da8303f947ff720a00543c4b00f061dc89&ipo=images' : animal.photo_url %>)">
          </div>
          <div class="animal-card-name">
            <%= animal.name %>
          </div>
        </div>
      <% end %>
    <% end  %>
</div>

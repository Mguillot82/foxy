<div class="animal-cards-list">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal.id) do %>
        <div class="animal-card">
          <div class="animal-card-image" style="background-image : url(<%= animal.photo_url.present? ? animal.photo_url : 'https://t4.ftcdn.net/jpg/04/50/96/23/240_F_450962330_w4RDU0GCIeKy0QvSxBuJ0MHp4mkuXWts.jpg' %>)"></div>
          <div class="animal-name"><%= animal.name %></div>
        </div>
      <% end %>
    <% end  %>
</div>
